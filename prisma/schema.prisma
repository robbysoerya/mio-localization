// ----------
// Datasource & Generator
// ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ----------
// Core Models
// ----------

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?
  isActive    Boolean @default(true)

  features Feature[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  languages Language[]

  @@index([name])
}

model Feature {
  id          String  @id @default(cuid())
  name        String
  description String?
  projectId   String
  isActive    Boolean @default(true)

  project Project @relation(fields: [projectId], references: [id])
  keys    Key[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([projectId])
}

model Key {
  id          String  @id @default(cuid())
  key         String
  description String?
  featureId   String
  isActive    Boolean @default(true)

  feature      Feature       @relation(fields: [featureId], references: [id])
  translations Translation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([featureId, key])
  @@index([featureId])
}

model Translation {
  id         String  @id @default(cuid())
  keyId      String
  locale     String
  value      String?
  isReviewed Boolean @default(false)

  key Key @relation(fields: [keyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([keyId, locale])
  @@index([locale])
}

// ----------
// Language list (project-specific)
// ----------
model Language {
  id        String  @id @default(cuid())
  locale    String // e.g. "en", "id", "zh", etc.
  name      String // English, Indonesian, Chinese
  projectId String
  isActive  Boolean @default(true)

  project Project @relation(fields: [projectId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([locale, projectId])
  @@index([projectId])
}

// ----------
// Authentication
// ----------
model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  image    String?
  role     UserRole @default(USER)
  isActive Boolean  @default(true)

  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  EDITOR
  USER
}

// ----------
// Audit Logging
// ----------
model AuditLog {
  id       String  @id @default(cuid())
  userId   String?
  action   String
  entity   String
  entityId String?
  changes  Json?

  user User? @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([entity])
  @@index([userId])
}
